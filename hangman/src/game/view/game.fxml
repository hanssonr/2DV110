<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<GridPane fx:controller="game.controller.GameController" xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="8" vgap="10">
    <Label text="Number of guesses left:"
           GridPane.columnIndex="1" GridPane.rowIndex="0"
           GridPane.columnSpan="2"/>

    <Label fx:id="guessesLabel"
           GridPane.columnIndex="2" GridPane.rowIndex="0"
           GridPane.columnSpan="3"/>

    <Label fx:id="wordLabel"
          GridPane.columnIndex="1" GridPane.rowIndex="1"
          GridPane.columnSpan="2"/>

    <TextField fx:id="guessField"
            GridPane.columnIndex="1" GridPane.rowIndex="2"/>

    <Button fx:id="guessButton" text="guess"
            GridPane.columnIndex="2" GridPane.rowIndex="2" onAction="#doGuess" />

    <Label fx:id="outputLabel"
           GridPane.columnIndex="1" GridPane.rowIndex="3"
           GridPane.columnSpan="2"/>

    <Label fx:id="guessedCharacters"
           GridPane.columnIndex="1" GridPane.rowIndex="4"
           GridPane.columnSpan="2"/>
</GridPane>